NAME={{ item.name }}
NODE_ROOT={{ item.root }}
NODE_SCRIPT={{ item.script }}
NODE_ENV={{ item.node_env }}
USERNAME={{ item.user }}

{% set extra_env = item.extra_env | default('') %}
{% if extra_env|first() == '"' %}
{# quoted parameters #}
EXTRA_ENV={{ item.extra_env | default('') | trim }}
{% else %}
EXTRA_ENV="{{ item.extra_env | default('') | trim }}"
{% endif %}

OPTIONS="--pidFile=/var/run/forever/$NAME.pid -a -l /var/log/forever/$NAME.log"