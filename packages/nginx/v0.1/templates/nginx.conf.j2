#
# Generated by devo.ps for {{ ansible_hostname }}
#
{# Define default variables if undefined #}
{% set nginx = nginx | default({}) %}
{% set events = nginx.events | default({}) %}
{% set http = nginx.http | default({}) %}

user {{ nginx.user | default('www-data') }};
worker_processes {{ nginx.worker_processes | default('4') }};
pid {{ nginx.pid | default('/var/run/nginx.pid') }};

events {
    worker_connections {{ events.worker_connections | default('1024') }};
    # multi_accept on;
}

http {

    ##
    # Basic Settings
    ##

    sendfile {{ http.sendfile | default('on') }};
    tcp_nopush {{ http.tcp_nopush | default('on') }};
    tcp_nodelay {{ http.tcp_nodelay | default('on') }};
    keepalive_timeout {{ http.keepalive_timeout | default('65') }};
    types_hash_max_size {{ http.types_hash_max_size | default('2048') }};
    # server_tokens off;

    # server_names_hash_bucket_size 64;
    # server_name_in_redirect off;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # Logging Settings
    ##

    access_log {{ http.access_log | default('/var/log/nginx/access.log') }};
    error_log {{ http.error_log | default('/var/log/nginx/error.log') }};

    ##
    # Gzip Settings
    ##

    gzip {{ http.gzip | default('on') }};
    gzip_disable {{ http.gzip_disable | default('"msie6"') }};

    # gzip_vary on;
    # gzip_proxied any;
    # gzip_comp_level 6;
    # gzip_buffers 16 8k;
    # gzip_http_version 1.1;
    # gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

    ##
    # Virtual Host Configs
    ##

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}