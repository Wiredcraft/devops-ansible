{% if task is defined and task.supervisor is defined and task.supervisor.program_add is defined %}
    {% set item = task.supervisor.program_add | default({}) %}
{% else %}
    {% set item = item | default({}) %}
{% endif %}

{% set log = item.log | default({}) %}

[program:{{ item.name }}]
command = {{ item.command }}
autostart = {{ item.autostart | default('true') }}
user = {{ item.user | default('root') }}
environment = {{ item.env | default('') }}

{% if log %}
{% if log.stdout %}stdout_logfile = {{ log.stdout }}{% endif %}
{% if log.stderr %}stderr_logfile = {{ log.stderr }}{% endif %}
{% endif %}

{% if item.extra %}
{{ item.extra }}
{% endif %}
