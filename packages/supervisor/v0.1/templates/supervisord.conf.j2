{% set inet = supervisor.inet | default({}) %}

[supervisord]
nodaemon = {% if supervisor.nodaemon is defined %}{{ supervisor.nodaemon }}{% else %}false{% endif %}

[inet_http_server]
{% if inet.port is defined %}port = {{ inet.port }}{% endif %}
{% if inet.username is defined %}username = {{ inet.username }}{% endif %}
{% if inet.password is defined %}password = {{ inet.password }}{% endif %}
