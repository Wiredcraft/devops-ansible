#
# Generated by Ansible for {{ ansible_hostname }}
#
{# Define default variables if undefined #}
{% set mysql = mysql | default({}) %}
{% set tunable = mysql.tunable | default({}) %}
{% set innodb = mysql.innodb | default({}) %}
{% set query_cache = mysql.query_cache | default({}) %}
{% set logs = mysql.logs | default({}) %}
{% set replication = mysql.replication | default({}) %}

# Local modifications will be overwritten.
#
# The MySQL database server configuration file.
#
# You can copy this to one of:
# - "/etc/mysql/my.cnf" to set global options,
# - "~/.my.cnf" to set user-specific options.
#
# One can use all long options that the program supports.
# Run program with --help to get a list of available options and with
# --print-defaults to see which it would actually understand and use.
#
# For explanations see
# http://dev.mysql.com/doc/mysql/en/server-system-variables.html

# This will be passed to all mysql clients
# It has been reported that passwords should be enclosed with ticks/quotes
# escpecially if they contain "#" chars...
# Remember to edit /etc/mysql/debian.cnf when changing the socket location.
[client]
port            = {{ mysql.port | default('3306') }}
socket          = {{ mysql.socket | default('/var/run/mysqld/mysqld.sock') }}

# Here is entries for some specific programs
# The following values assume you have at least 32M ram

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket          = {{ mysql.socket | default('/var/run/mysqld/mysqld.sock') }}
nice            = 0

[mysqld]
#
# * Basic Settings
#

#
# * IMPORTANT
#   If you make changes to these settings and your system uses apparmor, you may
#   also need to also adjust /etc/apparmor.d/usr.sbin.mysqld.
#

user            = mysql
pid-file        = {{ mysql.pid_file | default('/var/run/mysqld/mysqld.pid') }}
socket          = {{ mysql.socket | default('/var/run/mysqld/mysqld.sock') }}
port            = {{ mysql.port | default('3306') }}
basedir         = {{ mysql.base_dir | default('/usr') }}
datadir         = {{ mysql.data_dir | default('/var/lib/mysql') }}
tmpdir          = /tmp
skip-external-locking
#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address            = {{ mysql.bind_address | default('127.0.0.1') }}
#
# * Fine Tuning
#
key_buffer              = {{ tunable.key_buffer | default('256M') }}
max_allowed_packet      = {{ tunable.max_allowed_packet | default('16M') }}
thread_stack            = {{ tunable.thread_stack | default('256K') }}
thread_cache_size       = {{ tunable.thread_cache_size | default('32') }}

auto-increment-increment = {{ mysql.auto_increment_increment | default('1') }}
auto-increment-offset    = {{ mysql.auto_increment_offset | default('1') }}

# This replaces the startup script and checks MyISAM tables if needed
# the first time they are touched
myisam-recover          = BACKUP
#max_connections        = 100
#table_cache            = 64
#thread_concurrency     = 10
max_connections         = {{ tunable.max_connections | default('256') }}
wait_timeout            = {{ tunable.wait_timeout | default('180') }}
net_read_timeout        = {{ tunable.net_read_timeout | default('30') }}
net_write_timeout       = {{ tunable.net_write_timeout | default('30') }}
back_log                = {{ tunable.back_log | default('128') }}
table_open_cache        = {{ tunable.table_open_cache | default('1024') }}
max_heap_table_size     = {{ tunable.max_heap_table_size | default('64M') }}

#
# * Query Cache Configuration
#
query_cache_limit       = {{ query_cache.query_cache_limit | default('2M') }}
query_cache_size        = {{ query_cache.query_cache_size | default('64M') }}
#
# * Logging and Replication
#
# Both location gets rotated by the cronjob.
# Be aware that this log type is a performance killer.
#log            = /var/log/mysql/mysql.log
#
# Error logging goes to syslog. This is a Debian improvement :)
{% if logs.log_error %}
log-error = {{ logs.log_error | default('/var/log/mysql/mysql.log') }}
{% endif %}
#
# Here you can see queries with especially long duration
slow_query_log			= {{ logs.slow_query_log | default('1') }}
slow_query_log_file		= {{ logs.slow_query_log_file | default('/var/log/mysql/slow.log') }}
long_query_time         = {{ logs.long_query_time | default('1') }}
log_queries_not_using_indexes 	= {{ logs.log_queries_not_using_indexes | default('Off') }}

#
# The following can be used as easy to replay backup logs or for replication.
# note: if you are setting up a replication slave, see README.Debian about
#       other settings you may need to change.
{% if replication.server_id %}
server_id              = {{ replication.server_id | default('10') }}
{% endif %}
{% if replication.log_bin %}
log_bin = {{ replication.log_bin | default('mysql-bin') }}
log_slave_updates       = {{ replication.log_slave_updates | default('On') }}
{% endif %}
log_bin_trust_function_creators = {{ replication.log_bin_trust_function_creators | default('Off') }}
expire_logs_days        = {{ replication.expire_logs_days | default('10') }}
max_binlog_size         = {{ replication.max_binlog_size | default('100M') }}
#binlog_do_db           = include_database_name
#binlog_ignore_db       = include_database_name
{% if replication.relay_log %}
relay_log               = {{ replication.relay_log | default('relay-bin') }}
{% endif %}
sync_binlog             = {{ replication.sync_binlog | default('1') }}
{% if replication.skip_slave_start %}
skip_slave_start
{% endif %}

#
# * InnoDB
#
# InnoDB is enabled by default with a 10MB datafile in /var/lib/mysql/.
# Read the manual for more InnoDB related options. There are many!
# You might want to disable InnoDB to shrink the mysqld process by circa 100MB.
#skip-innodb
innodb_buffer_pool_size = {{ innodb.innodb_buffer_pool_size | default('128M') }}
innodb_log_file_size    = {{ innodb.innodb_log_file_size | default('5M') }}
innodb_additional_mem_pool_size = {{ innodb.innodb_additional_mem_pool_size | default('8M') }}
innodb_data_file_path   = {{ innodb.innodb_data_file_path | default('ibdata1:10M:autoextend:max:500M') }}
innodb_file_per_table
innodb_flush_log_at_trx_commit = {{ innodb.innodb_flush_log_at_trx_commit | default('1') }}
innodb_flush_method     = {{ innodb.innodb_flush_method | default('O_DIRECT') }}
innodb_log_buffer_size  = {{ innodb.innodb_log_buffer_size | default('8M') }}
innodb_adaptive_flushing  = {{ innodb.innodb_adaptive_flushing | default('On') }}

#
# * Federated
#
# The FEDERATED storage engine is disabled since 5.0.67 by default in the .cnf files
# shipped with MySQL distributions (my-huge.cnf, my-medium.cnf, and so forth).
#
skip-federated

#
# * Security Features
#
# Read the manual, too, if you want chroot!
# chroot = /var/lib/mysql/
#
# For generating SSL certificates I recommend the OpenSSL GUI "tinyca".
#
# ssl-ca=/etc/mysql/cacert.pem
# ssl-cert=/etc/mysql/server-cert.pem
# ssl-key=/etc/mysql/server-key.pem

[mysqldump]
quick
quote-names
max_allowed_packet      = {{ tunable.max_allowed_packet | default('16M') }}

[mysql]
#no-auto-rehash # faster start of mysql but no tab completition

[isamchk]
key_buffer              = {{ tunable.max_allowed_packet | default('16M') }}

#
# * NDB Cluster
#
# See /usr/share/doc/mysql-server-*/README.Debian for more information.
#
# The following configuration is read by the NDB Data Nodes (ndbd processes)
# not from the NDB Management Nodes (ndb_mgmd processes).
#
# [MYSQL_CLUSTER]
# ndb-connectstring=127.0.0.1

old_passwords           = {{ mysql.old_passwords | default('0') }}
