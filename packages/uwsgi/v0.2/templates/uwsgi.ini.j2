{% set task_options = task.uwsgi.app_add | default({})  %}
[uwsgi]
# App-related settings

# the base directory (full path)
chdir           = {{ task_options.root | mandatory }}

# wsgi application
module          = {{ task_options.module | mandatory }}

{% if task_options.virtualenv %}
# the virtualenv (full path)
home            = /opt/virtualenvs/devops_{{ task_options.virtualenv }}
{% endif %}

# process-related settings

# master
master          = true

# Drop privileges
uid             = devops
gid             = devops

# maximum number of worker processes
processes       = 4

{% if task_options.listen is defined %}
http-socket      = {% if not ':' in task_options.listen %}:{% endif %}{{ task_options.listen }}
{% else %}
socket           = /var/run/uwsgi_{{ task_options.name }}.sock
# ... with appropriate permissions - may be needed
# chmod-socket    = 664
{% endif %}

# clear environment on exit
vacuum          = true
