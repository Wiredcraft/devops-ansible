DOCKER_OPTS="{% for d in dns %}--dns {{ d }} {% endfor %}{% if sock %}-H unix:///var/run/docker.sock {% endif %}{% if inet %}-H tcp://{{ inet_ip }}:{{ inet_port }} {% endif %}{% if registry_mirror %}--registry-mirror={{ registry_mirror }} {% endif %}{{ extra_args }}"


