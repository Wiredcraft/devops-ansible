{# Define default variables if undefined #}
{% set docker = docker | default({}) %}
{% set dns = docker.dns | default([]) %}
{% set sock = docker.sock | default(True) %}
{% set inet = docker.inet | default(False) %}
{% set inet_ip = docker.inet_ip | default('0.0.0.0') %}
{% set inet_port = docker.inet_port | default('2375') %}
{% set registry_mirror = docker.registry_mirror | default('') %}
{% set extra_args = docker.extra_args | default('') %}

